.og-calendar {
  background-color: #FFF;
  color: rgb(0, 0, 0);
  padding: 0 0 40rpx 0;
}
.og-calendar .header {/*日历导航栏*/
  position: relative;
  height: 120rpx;
  line-height: 120rpx;
  font-size: 37rpx;
  text-align: center;
  background: #009191;
  color: #FFFFFF;
}
.og-calendar .header .month-pre,
.og-calendar .header .month-next {
  position: absolute;
  top: 0;
  width: 120rpx;
  height: 120rpx
}
.og-calendar .header .btn:active {/*左右选择月份触发*/
  background: #009191
}
.og-calendar .header .month-pre {
  left: 0;
}
.og-calendar .header .month-next {
  right: 0;
}
.og-calendar .header .month-pre image,
.og-calendar .header .month-next image {
  margin-top: 30rpx;
  width: 60rpx;
  height: 60rpx;
}

.og-calendar .week {
  border-top: 2rpx solid #333;
  border-bottom: 2rpx solid #333;
}

.og-calendar .col {
  width: 14.28571428571429%;
  display: inline-flex;
  justify-content: center;
  text-align: center;
  padding: 15rpx 0;
}
.og-calendar .col text {
  display: block;
  width: 60rpx;
  height: 60rpx;
  font-size: 32rpx;
  line-height: 60rpx;
  border: 2rpx solid transparent;
}
.og-calendar .body .col text {
  border-radius: 50%;
}
.og-calendar .body .col.active text {
  border-color: #009191;
}
.og-calendar .body .col.old {
  color: #7A7A7F
} 
.og-calendar .body .col.current text,
.og-calendar .body .col text:active {
  background-color: #009191;
  color: #FFF;
}